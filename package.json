{
  "name": "pomodoro-timer",
  "version": "0.1.0",
  "private": true,
  "main": "electron/main.cjs",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "electron:dev": "concurrently \"vite\" \"electron .\"",
    "electron:build": "vite build && electron-builder"
  },
  "build": {
    "appId": "com.pomodoro.app",
    "directories": {
      "output": "dist_electron"
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "category": "Utility"
    },
    "win": {
      "target": "nsis"
    }
  },
  "devDependencies": {
    "concurrently": "^9.1.0"
  }
}
